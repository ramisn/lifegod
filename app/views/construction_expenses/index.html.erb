        <div class="panel-body" id="const_expenses">
            <h1 class="btn btn-outline btn-primary" style="margin-left: 500px;font-size: 20px">Constructional Expenses</h1>
            <%#= link_to 'New Construction Expense', new_construction_expense_path, class: "btn btn-outline btn-info", style:"margin-left:-757px;font-size: 17px" %>
            <table id="const_expenses" class="table">
              <thead>
                <tr>
                <th>Date</th>  
                <th>Material description</th>
                  <th>Amount</th>
                  <th>Owner</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @construction_expenses.each do |construction_expense| %>
                  <tr>
                    <td><%= (construction_expense.created_at).strftime("%d-%m-%Y") %></td>
                    <td><%= construction_expense.material_description %></td>
                    <td><%= number_with_precision(construction_expense.amount, precision:2) %></td>
                    <td><%= construction_expense.owner %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>
            </div>
            </div><!-- /.panel-body -->

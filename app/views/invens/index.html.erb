      $(document).ready(function() {
        $('#iottt').DataTable({ responsive: true, ordering: true });
        $('#iottt_1').DataTable({ responsive: true, ordering: true });
        $('#iottt_2').DataTable({ responsive: true, ordering: true });
    </script>
  <% end %>